<!--pages/me.wxml-->
<view class="page">
  <view class="userinfo" style="background-color: #0092CF">
    <open-data type="userAvatarUrl" class="userinfo-avatar"></open-data>
    <open-data type="userNickName" class="userinfo-nickname"></open-data>
  </view>
  <view class="page__bd">
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_access" hover-class="weui-cell_active" bindtap='unbindIdentity'>
        <view class="weui-cell__bd">解绑</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </view>
      <view class="weui-cell weui-cell_access">
        <view class="weui-cell__bd">姓名</view>
        <view class="weui-cell__ft">{{name}}</view>
      </view>
      <view class="weui-cell weui-cell_access">
        <view class="weui-cell__bd">学号</view>
        <view class="weui-cell__ft">{{xh}}</view>
      </view>
      <view class="weui-cell weui-cell_access">
        <view class="weui-cell__bd">版本</view>
        <view class="weui-cell_ft">v{{version}}</view>
      </view>
    </view>
  </view>
</view>
